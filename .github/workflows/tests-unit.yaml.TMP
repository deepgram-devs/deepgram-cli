name: Tests - Unit

on:
  pull_request:
      types:
        - assigned
        - opened
        - synchronize
        - reopened
jobs:
  build:
    name: Go Tests
    # Only run this job if we're in the main repo, not a fork.
    if: github.repository == 'deepgram-devs/deepgram-cli'
    runs-on: ubuntu-latest
    timeout-minutes: 5
    steps:

      - name: Checkout code by commit
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: "1.19"

      - name: Ensure dependencies installed
        shell: bash
        run: |
          make ensure-deps

      - name: Go Tidy
        shell: bash
        run: go mod tidy

      - name: Go Mod
        shell: bash
        run: go mod download

      - name: Go Mod Verify
        shell: bash
        run: go mod verify

      - name: Run Tests
        shell: bash
        run: |
          go test -v -run Test_ ./...
